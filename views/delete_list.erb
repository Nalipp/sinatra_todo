<form action="/lists/<%= params[:id] %>/delete" method="post">
  <dl>
    <dt>
      <label for="list_name">Are you sure you want to delete this list? : "<%= @list[:name] %>"</label>
    </dt>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Yes">
    <a href="/lists/<%= params[:id]%>">Cancel</a>
  </fieldset>
</form>
