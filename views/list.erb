<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a href="/lists/<%= @list_id %>/edit" class="edit">Edit List</a></li>
    </ul>
  </header>

  <ul>
    <% @list[:todos].each_with_index do |todo, index| %>
      <% boolean = session[:lists][@list_id][:todos][index][:completed] %>
        <% if boolean == 'true' %>
          <li class="complete">
            <form action="/lists/<%= @list_id %>/todos/<%= index %>/completed/false" method="post" class="check">
              <input type="hidden" name="completed" value="add_check" />
              <button type="submit">Complete</button>
            </form>
            <h3><%= todo[:name] %></h3>
            <form action="/lists/<%= @list_id %>/todos/<%= index %>/delete" method="post" class="delete">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% else %>
        <li>
          <form action="/lists/<%= @list_id %>/todos/<%= index %>/completed/true" method="post" class="">
            <input type="hidden" name="completed" value="add_check" />
            <button type="submit">Complete</button>
          </form>
          <h3><%= todo[:name] %></h3>
          <form action="/lists/<%= @list_id %>/todos/<%= index %>/delete" method="post" class="delete">
            <button type="submit">Delete</button>
          </form>
        </li>
        <% end %>
    <% end %>
  </ul>
</section>

<form action="/lists/<%= @list_id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Something to do" type="text" value="<%= params[:todo] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>
